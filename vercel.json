{
  "builds": [
    {
      "src": "api/backend.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/backend.py"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}